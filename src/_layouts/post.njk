---
layout: base.njk
---

<article class="post">
    <header class="post-header">
        <h1>{{ title }}</h1>
        <div class="post-meta">
            <time datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time>
            {% if tags %}
                <div class="post-tags">
                    {% for tag in tags %}
                        {% if tag != "posts" %}
                            <span class="tag">{{ tag }}</span>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </header>
    
    <div class="post-content">
        {{ content | safe }}
    </div>
</article>

<nav class="post-navigation">
    <a href="/" class="back-to-home">‚Üê Back to all posts</a>
</nav>